@using SchoolWeb.Enums
@using SchoolWeb.Helper
@model Teacher

@*Use ViewData, visit: https://www.red-gate.com/simple-talk/blogs/what-is-viewdata-and-implement-viewdata-in-asp-net-mvc*@
@{
    ViewData["Title"] = "Delete teacher";
}

<h2>@ViewData["Title"]</h2>

<form class="d-flex p-2 flex-column" method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" maxlength="100" type="text" readonly="@(true)">
    </div>

    <div class="form-group">
        <label asp-for="TeachingMode"></label>
        <input asp-for="TeachingModeDescription" 
            class="form-control" readonly="@(true)"></input>
    </div>

    <div class="form-actions">
        <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary" >Back to list</a>
        <button type="submit" class="btn btn-primary btn-lg">Delete</button>
    </div>
</form>