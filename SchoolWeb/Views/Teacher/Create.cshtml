@using SchoolWeb.Enums
@using SchoolWeb.Helper
@model Teacher

@*Use ViewData, visit: https://www.red-gate.com/simple-talk/blogs/what-is-viewdata-and-implement-viewdata-in-asp-net-mvc*@
@{
    ViewData["Title"] = "Add a new teacher";
}

<h2>@ViewData["Title"]</h2>

<form class="d-flex p-2 flex-column" method="post">
    @*Summarize the error messages from all validation controls and display them in a bulleted list.*@
    @*<div asp-validation-summary="All"></div>*@
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" maxlength="100" type="text" autofocus>
    </div>
    
    <div class="form-control-validation">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeachingMode"></label>
        <select asp-for="TeachingMode" asp-items="Html.GetEnumSelectList<TeachingMode>()" 
            class="form-control"></select>
    </div>
    <div class="form-control-validation">
        <span asp-validation-for="TeachingMode" class="text-danger"></span>
    </div>

    <div class="form-actions">
        <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary" >Back to list</a>
        <button type="submit" class="btn btn-primary btn-lg">Save</button>
    </div>
</form>

@*Using partial view with jquery scripts, for form data validation on client side*@
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}